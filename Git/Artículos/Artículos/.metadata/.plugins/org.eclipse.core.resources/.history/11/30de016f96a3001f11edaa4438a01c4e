<!DOCTYPE html>
<html xmlns:th="http://thymeleaf.org">

<body>
    <nav th:if="${page != null}" th:fragment="paginator">
        <ul class="pagination">
            <li class="page-item" th:class="${page.primera ? 'page-item disabled' : 'page-item'}">
                <span class="page-link" th:if="${page.primera}">Primera</span>
                <a class="page-link" th:if="${not page.primera}" th:href="@{${page.url}(page=0)}">Primera</a>
            </li>
            <li class="page-item" th:class="${not page.anterior ? 'page-item disabled' : 'page-item'}">
                <span class="page-link" th:if="${not page.anterior}">&laquo;</span>
                <a class="page-link" th:if="${page.anterior}" th:href="@{${page.url}(page=${page.paginaActual - 1})}">&laquo;</a>
            </li>
            <li class="page-item" th:each="item : ${page.paginas}"
                th:if="${item.numero >= (page.paginaActual - page.paginaActual % 5) + 1 and item.numero <= (page.paginaActual - page.paginaActual % 5) + 5}"
                th:class="${item.actual ? 'page-item active' : 'page-item'}">
                <span class="page-link" th:if="${item.actual}" th:text="${item.numero}"></span>
                <a class="page-link" th:if="${not item.actual}" th:href="@{${page.url}(page=${item.numero - 1})}" th:text="${item.numero}"></a>
            </li>
            <li class="page-item" th:class="${not page.siguiente ? 'page-item disabled' : 'page-item'}">
                <span class="page-link" th:if="${not page.siguiente}">&raquo;</span>
                <a class="page-link" th:if="${page.siguiente}" th:href="@{${page.url}(page=${page.paginaActual + 1})}">&raquo;</a>
            </li>
            <li class="page-item" th:class="${page.ultima ? 'page-item disabled' : 'page-item'}">
                <span class="page-link" th:if="${page.ultima}">Última</span>
                <a class="page-link" th:if="${not page.ultima}" th:href="@{${page.url}(page=${page.totalPaginas - 1})}">Última</a>
            </li>
        </ul>
    </nav>
</body>
</html>
