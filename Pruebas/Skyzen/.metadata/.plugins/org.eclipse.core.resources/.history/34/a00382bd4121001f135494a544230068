package skyzen;

public enum AfricanCountriesActivities {
    PK("Parque Nacional Kruger, Sudáfrica", "Safari en vehículo para avistar a los \"Big Five\" y caminata guiada para explorar la flora y fauna locales", 40),
    BRC("Blyde River Canyon, Sudáfrica", "Visita al Mirador de God’s Window para disfrutar de vistas panorámicas y paseo en barco por la represa del cañón", 70),
    PNP("Pilanesberg, Sudáfrica", "Safari en vehículo para avistar la vida silvestre y visita al centro de interpretación para aprender sobre la ecología del parque", 120),
    SS("Stellenbosch, Sudáfrica", "Tour de una bodega con cata de vinos y paseo por el centro histórico para explorar la arquitectura colonial", 160),
    HS("Hermanus, Sudáfrica", "Paseo en barco para avistar ballenas y caminata por el acantilado para disfrutar de las vistas panorámicas", 220),
    CS("Cederberg, Sudáfrica", "Caminata para ver las formaciones rocosas y visita a los sitios de arte rupestre para explorar la historia local", 120),
    PND("Parque Nacional Drakensberg, Sudáfrica", "Caminata corta en Tugela Gorge para disfrutar de vistas y visita a las pinturas rupestres san para aprender sobre la cultura local", 220),
    RM("Reserva Natural de Mkhaya, Esuatini (Suazilandia)", "Safari en vehículo para avistar rinocerontes y visita a la reserva de elefantes para aprender sobre la conservación", 170),
    VRF("Valle del Río Fish, Namibia", "Visita al mirador del Cañón del Río Fish para disfrutar de vistas panorámicas y caminata corta por el borde del cañón", 150),
    SN("Sossusvlei, Namibia", "Subida a la Duna 45 para obtener vistas panorámicas y paseo por Deadvlei para explorar las dunas y árboles secos", 50),
    IB("Isla de Bazaruto, Mozambique", "Snorkel en los arrecifes de coral y paseo por las dunas de arena para disfrutar de la belleza natural", 220),
    PNS("Parque Nacional del Serengeti, Tanzania", "Safari en vehículo para observar la vida silvestre y visita a un kopje para explorar las formaciones rocosas", 250),
    ACN("Área de Conservación de Ngorongoro, Tanzania", "Safari en el cráter para avistar animales y visita al mirador del cráter para disfrutar de vistas panorámicas", 60),
    PNK("Parque Nacional del Kilimanjaro, Tanzania", "Caminata corta para explorar la base de la montaña y visita a una cascada para disfrutar de la naturaleza", 270),
    ZB("Zanzíbar, Tanzania", "Exploración de Stone Town para conocer la historia y cultura locales y tiempo libre en la playa para relajarse", 320),
    LM("Lamu, Kenia", "Caminata por el casco antiguo para explorar la arquitectura y cultura swahili y tiempo libre en la playa para nadar y relajarse", 250),
    RG("Ruinas de Gedi, Kenia", "Visita a las ruinas para explorar la historia y cultura swahili y caminata por el bosque para observar la vida silvestre", 200),
    PNV("Parque Nacional de los Volcanes, Ruanda", "Trekking para observar gorilas de montaña y visita a un pueblo para conocer la cultura local", 250),
    PNB("Parque Nacional de Bwindi, Uganda", "Trekking para observar gorilas de montaña y visita a una comunidad local para aprender sobre su estilo de vida", 220),
	IS("Isla de Socotra, Yemen", "Exploración de la flora y fauna únicas en el mundo, incluidos los famosos árboles de sangre de dragón y las formas de vida marina", 250),
	M("Madagascar", "Las extraordinarias fauna y flora de la isla se combinan con paisajes épicos de una diversidad increíble: cañones calcáreos, karsts graníticos, colinas fértiles sembradas de arrozales en terraza, bosques de todo tipo y un suelo rico en laterita que ha dado al país su sobrenombre de “Isla Roja”.", 300);
	


    private String lugar;
    private String descripcion;
    private int duracion;
    private String imagenes;

    private AfricanCountriesActivities(String lugar, String descripcion, int duracion, String imagenes) {
		this.lugar = lugar;
		this.descripcion = descripcion;
		this.duracion = duracion;
		this.imagenes = imagenes;
	}

	public String getLugar() {
		return lugar;
	}

	public String getDescripcion() {
		return descripcion;
	}

	public int getDuracion() {
		return duracion;
	}

	public String getImagenes() {
		return imagenes;
	}
	
}

